<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTemplate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="HeaderStyle">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
    </style>

    <style name="MontserratBold">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MontserratExtraBold">
        <item name="fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="MontserratRegular">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="BackgroundWithTextColorTextView">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="TextColorButton">
        <item name="android:textColor">@color/black_80</item>
    </style>

</resources>